{
  "compilerOptions": {
    "outDir": "./dist/",
    "target": "ES2019",
    "module": "ES2020",
    "moduleResolution": "Node",
    "lib": ["es2022", "DOM"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "declaration": true
  },
  "include": ["src/**/*"],
  "rootDir": "./src/"
}
